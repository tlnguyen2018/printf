#include "holberton.h"

/**
 * pt_integer - function to print integers
 * @list: argument list printed integer
 * Return: Return number of printed integer
 */
int pt_integer(va_list list)
{
	int i, expo = 1, cou = 0;
	unsigned int n;

	i = va_arg(list, int);

	if (i < 0)
	{
		len = len + _putchar('-');
		n = a * -1;
	}
	else
	{
		n = a;
	}
	while (n / expo > 9)
	{
		expo *= 10;
	}
	while (expo != 0)
	{
		len = len + _putchar(n / expo + '0');
		n = n % expo;
		expo = expo / 10;
	}
	return (len);
}
